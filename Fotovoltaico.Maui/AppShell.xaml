<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Fotovoltaico.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Fotovoltaico.Maui"
    xmlns:pages="clr-namespace:Fotovoltaico.Maui.Pages"
    Title="Fotovoltaico.Maui">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <FlyoutItem Title="Home">
        <Tab>
            <ShellContent Title="Home" ContentTemplate="{DataTemplate pages:HomePage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Settings">
        <Tab>
            <ShellContent Title="Settings" ContentTemplate="{DataTemplate pages:SettingsPage}" />
        </Tab>
    </FlyoutItem>
</Shell>
