<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Fotovoltaico.Maui"
             x:Class="Fotovoltaico.Maui.Pages.EditPersonPage">

    <StackLayout Padding="10">
        <Entry Text="{Binding Person.Name}" Placeholder="Nome" />
        <Entry Text="{Binding Person.Email}" Placeholder="Email" />
        <Button Text="Salvar" Command="{Binding SaveCommand}" />
    </StackLayout>
</ContentPage>
